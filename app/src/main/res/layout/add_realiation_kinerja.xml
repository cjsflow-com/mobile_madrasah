<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:id="@+id/tvTitleAddRealitation"
        android:fontFamily="@font/montserrat_medium"
        android:text=""
        android:textAlignment="center"
        android:textStyle="bold"
        android:textAllCaps="true" />

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/tvTitleAddRealitation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:paddingStart="16dp"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="16dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/nameTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rectangle"
            android:text="Manajemen Web"
            android:textColor="@color/manblue"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/nameAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingTop="11dp"
            android:text="Membangun aplikasi SuperApp ZI WBK MAN 2"
            android:textColor="@color/text_default"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingTop="11dp"
            android:text="8 Laporan"
            android:textColor="@color/text_default"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/triwulanEkinerja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingTop="11dp"
            android:text=""
            android:textColor="@color/text_default"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:id="@+id/tvNameDataSupport"
            android:visibility="visible"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Nama Data Dukung"
            android:textColor="@color/text_default"
            android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            app:boxCornerRadiusBottomEnd="5dp"
            android:elevation="4dp"
            android:layout_marginEnd="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_marginStart="10dp"
            android:id="@+id/parentNameDataSupport"
            app:boxCornerRadiusBottomStart="5dp"
            app:boxCornerRadiusTopEnd="5dp"
            app:boxCornerRadiusTopStart="5dp"
            android:layout_height="match_parent"
            android:hint="Nama Data Dukung">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNameDataSupport"
                android:layout_width="match_parent"
                android:backgroundTint="@color/white"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat"
                android:inputType="text"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:id="@+id/tvLinkGoogleDrive"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Link Google Drive"
            android:textColor="@color/text_default"
            android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            app:boxCornerRadiusBottomEnd="5dp"
            android:elevation="4dp"
            android:layout_marginEnd="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_marginStart="10dp"
            android:id="@+id/parentLinkGoogleDrive"
            app:boxCornerRadiusBottomStart="5dp"
            app:boxCornerRadiusTopEnd="5dp"
            app:boxCornerRadiusTopStart="5dp"
            android:layout_height="match_parent"
            android:hint="Link Google Drive">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLinkGoogleDrive"
                android:layout_width="match_parent"
                android:backgroundTint="@color/white"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat"
                android:inputType="textWebEditText"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tambahkan"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            app:backgroundTint="@color/mangold"
            app:cornerRadius="10dp"
            android:id="@+id/btnAddRealitation" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>