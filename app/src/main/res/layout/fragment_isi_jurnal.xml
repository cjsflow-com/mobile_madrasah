<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/dayContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--  Contoh hari senin  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senin"
                android:textSize="24sp"
                android:textColor="@color/text_default"/>

            <!-- Catatatn NB -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NB: Jadwal pembelajaran hanya sampai pukul 15.40"
                android:textSize="12sp"
                android:textColor="#d9534f"/>

            <!-- Kontainer Waktu dan Kelas -->
            <LinearLayout
                android:id="@+id/timeContainerMonday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Tampilan input waktu pertama -->
                <include layout="@layout/item_time_input"/>
            </LinearLayout>

            <!--Tombol Tambah Waktu-->
            <TextView
                android:id="@+id/addTimeMonday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah +"
                android:textColor="@color/manblue"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>